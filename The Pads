SELECT CONCAT(Name, CONCAT('(', CONCAT(LEFT(Occupation, 1), ')'))) FROM OCCUPATIONS ORDER BY Name ASC;


SELECT 'There are a total of ', COUNT(Occupation), CONCAT(LOWER(Occupation), 's.') FROM OCCUPATIONS GROUP BY
Occupation ORDER BY COUNT(Occupation), Occupation ASC;


